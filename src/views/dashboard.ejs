<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Content Hub - Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  <style>
    body {
      background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 50%, #dbeafe 100%);
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .animate-fade-in {
      animation: fadeIn 0.5s ease-out;
    }
    
    .card-hover {
      transition: all 0.3s ease;
    }
    
    .card-hover:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    }
    
    [x-cloak] { display: none !important; }
  </style>
</head>
<body class="min-h-screen" x-data="dashboardApp()" x-cloak>

  <!-- Header -->
  <header class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <!-- Logo & Title -->
        <div class="flex items-center gap-3">
          <img src="/files/logo.svg" alt="Logo" class="w-10 h-10">
          <div>
            <h1 class="text-xl font-bold text-gray-900">Content Hub</h1>
            <p class="text-xs text-gray-500">Real-time management</p>
          </div>
        </div>
        
        <!-- User Info & Actions -->
        <div class="flex items-center gap-4">
          <div class="hidden sm:flex items-center gap-2 px-3 py-2 bg-green-50 border border-green-200 rounded-lg">
            <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
            <span class="text-sm font-medium text-green-700">Live</span>
          </div>
          
          <div class="flex items-center gap-3 pl-4 border-l border-gray-200">
            <div class="text-right hidden sm:block">
              <p class="text-sm font-medium text-gray-900">Kuhandran</p>
              <p class="text-xs text-gray-500">Administrator</p>
            </div>
            <a 
              href="/logout"
              class="px-4 py-2 text-sm font-medium text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg transition-colors"
            >
              Logout
            </a>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Welcome Section -->
    <div class="mb-8 animate-fade-in">
      <h2 class="text-3xl font-bold text-gray-900 mb-2">Welcome back!</h2>
      <p class="text-gray-600">Manage your content in real-time without any downtime</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8 animate-fade-in">
      <!-- Total Files -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 card-hover">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-blue-100 rounded-lg">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
        </div>
        <p class="text-2xl font-bold text-gray-900">128</p>
        <p class="text-sm text-gray-600">Total Files</p>
      </div>

      <!-- Locales -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 card-hover">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-green-100 rounded-lg">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"></path>
            </svg>
          </div>
        </div>
        <p class="text-2xl font-bold text-gray-900">11</p>
        <p class="text-sm text-gray-600">Languages</p>
      </div>

      <!-- Collections -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 card-hover">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-purple-100 rounded-lg">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
        </div>
        <p class="text-2xl font-bold text-gray-900">103</p>
        <p class="text-sm text-gray-600">Collections</p>
      </div>

      <!-- Uptime -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 card-hover">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-emerald-100 rounded-lg">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <p class="text-2xl font-bold text-gray-900">100%</p>
        <p class="text-sm text-gray-600">Uptime</p>
      </div>
    </div>

    <!-- Action Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 animate-fade-in" style="animation-delay: 0.1s;">
      
      <!-- Content Management Card -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
        <div class="flex items-start gap-4 mb-6">
          <div class="p-3 bg-blue-100 rounded-xl">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Sync & Upload Files</h3>
            <p class="text-gray-600 mb-4">Upload and sync content across all languages instantly without any downtime</p>
            <button 
              @click="modalOpen = true"
              class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-lg transition-all shadow-lg hover:shadow-xl transform hover:scale-[1.02]"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
              </svg>
              Open Content Hub
            </button>
          </div>
        </div>
        
        <!-- Features List -->
        <div class="space-y-3 pt-6 border-t border-gray-200">
          <div class="flex items-center gap-2 text-sm text-gray-700">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span>Real-time content updates</span>
          </div>
          <div class="flex items-center gap-2 text-sm text-gray-700">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span>Zero downtime deployments</span>
          </div>
          <div class="flex items-center gap-2 text-sm text-gray-700">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span>Multi-language support</span>
          </div>
        </div>
      </div>

      <!-- Collections Card -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
        <div class="flex items-start gap-4 mb-6">
          <div class="p-3 bg-purple-100 rounded-xl">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Browse Collections</h3>
            <p class="text-gray-600 mb-4">View and manage all your content collections across different categories</p>
            <a 
              href="/api/collections"
              target="_blank"
              class="inline-flex items-center gap-2 px-6 py-3 bg-white border-2 border-purple-600 text-purple-600 hover:bg-purple-50 font-semibold rounded-lg transition-all transform hover:scale-[1.02]"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              View Collections
            </a>
          </div>
        </div>
        
        <!-- Language Grid -->
        <div class="pt-6 border-t border-gray-200">
          <p class="text-sm font-medium text-gray-700 mb-3">Supported Languages</p>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">ðŸ‡¬ðŸ‡§ English</span>
            <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">ðŸ‡¦ðŸ‡ª Arabic</span>
            <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">ðŸ‡©ðŸ‡ª German</span>
            <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">ðŸ‡ªðŸ‡¸ Spanish</span>
            <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">ðŸ‡«ðŸ‡· French</span>
            <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">ðŸ‡®ðŸ‡³ Hindi</span>
            <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">ðŸ‡®ðŸ‡© Indonesian</span>
            <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">ðŸ‡²ðŸ‡¾ Malay</span>
            <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">ðŸ‡±ðŸ‡° Sinhala</span>
            <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">ðŸ‡®ðŸ‡³ Tamil</span>
            <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">ðŸ‡¹ðŸ‡­ Thai</span>
          </div>
        </div>
      </div>
    </div>

    <!-- System Info -->
    <div class="mt-8 bg-gradient-to-r from-blue-50 to-purple-50 border border-blue-200 rounded-xl p-6 animate-fade-in" style="animation-delay: 0.2s;">
      <div class="flex items-start gap-4">
        <svg class="w-6 h-6 text-blue-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h4 class="font-semibold text-gray-900 mb-2">About Content Hub</h4>
          <p class="text-sm text-gray-700 mb-3">
            This platform enables real-time content management with zero downtime. All changes are instantly synchronized across Redis storage and available through the API without requiring server restarts.
          </p>
          <div class="flex flex-wrap gap-3 text-xs">
            <div class="flex items-center gap-1.5">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span class="text-gray-700">Redis Storage</span>
            </div>
            <div class="flex items-center gap-1.5">
              <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
              <span class="text-gray-700">Vercel Serverless</span>
            </div>
            <div class="flex items-center gap-1.5">
              <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
              <span class="text-gray-700">Auto-Sync Enabled</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Modal for File Management -->
  <div 
    x-show="modalOpen" 
    x-transition.opacity
    @click.self="modalOpen = false"
    @keydown.escape.window="modalOpen = false"
    class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-2 z-50"
    style="display: none;"
  >
    <div 
      class="bg-white rounded-2xl shadow-2xl w-full max-w-6xl max-h-[95vh] min-h-[500px] overflow-hidden flex flex-col"
      x-transition.scale.origin.top
      @click.stop
    >
      <div class="flex items-center justify-between p-6 border-b border-gray-200 flex-shrink-0">
        <div class="flex items-center gap-3">
          <img src="/files/logo.svg" alt="Logo" class="w-8 h-8">
          <h3 class="text-xl font-bold text-gray-900">Content Hub - Sync Manager</h3>
        </div>
        <button @click="modalOpen = false" class="p-2 hover:bg-gray-100 rounded-lg transition-colors flex-shrink-0">
          <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="flex-1 overflow-auto bg-gray-50">
        <iframe src="/sync-manager" class="w-full h-full border-0"></iframe>
      </div>
    </div>
  </div>

  <script>
    function dashboardApp() {
      return {
        modalOpen: false,
        
        init() {
          // Body overflow management
          this.$watch('modalOpen', value => {
            document.body.style.overflow = value ? 'hidden' : 'auto';
          });
        }
      }
    }
  </script>

</body>
</html>
