# Production Environment Configuration (EXAMPLE)
# Copy this file to .env.production and fill in your values
# ==================================================

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Authentication - MUST CHANGE THESE
AUTH_USER=admin
AUTH_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_EXPIRY=24h
ALLOWED_IP=*

# Security
ENABLE_CORS=true
CORS_ORIGIN=https://your-domain.com

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/portfolio-cms/app.log

# Performance
NODE_OPTIONS=--max-old-space-size=512
ENABLE_GZIP=true
CACHE_MAX_SIZE=100mb
CACHE_MAX_ITEMS=1000

# Storage Paths
COLLECTIONS_PATH=/app/public/collections
BACKUP_PATH=/app/backups
TEMP_PATH=/app/temp

# Features
ENABLE_FILE_UPLOAD=true
MAX_UPLOAD_SIZE=50mb
ENABLE_BACKUPS=true
ENABLE_SEARCH=true
ENABLE_SCANNER=true

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090
