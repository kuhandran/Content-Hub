{
  "apiGateway": "https://api-gateway-9unh.onrender.com",
  "staticContentExtensions": [".json", ".png", ".webp", ".pdf"],
  "routing": {
    "description": "Routing rules for frontend requests",
    "staticContent": {
      "description": "Files with these extensions are served from public folder",
      "extensions": [".json", ".png", ".webp", ".pdf"],
      "baseUrl": "/"
    },
    "apiCalls": {
      "description": "Paths without extensions are routed to API gateway",
      "baseUrl": "https://api-gateway-9unh.onrender.com"
    }
  },
  "examples": {
    "staticRequest": "/data/skills.json → serves from public/data/skills.json",
    "apiRequest": "/api/chatbot → calls https://api-gateway-9unh.onrender.com/api/chatbot",
    "imageRequest": "/image/profile.webp → serves from public/image/profile.webp"
  }
}
