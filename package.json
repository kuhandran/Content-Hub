{
  "name": "content-hub-monorepo",
  "version": "2.0.0",
  "description": "Content Hub - Monorepo with Backend API and Frontend",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kuhandran/Content-Hub.git"
  },
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "start": "npm start --workspaces",
    "backend:dev": "npm run dev --workspace=apps/backend",
    "backend:build": "npm run build --workspace=apps/backend",
    "backend:start": "npm start --workspace=apps/backend",
    "frontend:dev": "npm run dev --workspace=apps/frontend",
    "frontend:build": "npm run build --workspace=apps/frontend",
    "frontend:start": "npm start --workspace=apps/frontend",
    "setup-db": "npm run setup-db --workspace=apps/backend",
    "test": "npm test --workspaces"
  },
  "keywords": [
    "cms",
    "content-hub",
    "next.js",
    "react",
    "api",
    "monorepo"
  ],
  "author": "kuhandran",
  "license": "MIT",
  "engines": {
    "node": ">=18.x",
    "npm": ">=9.x"
  }
}
