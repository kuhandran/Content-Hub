{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm install",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "^/(.*\\.(js|css|html|json|xml|txt|png|jpg|jpeg|gif|svg|ico|webp|woff|woff2|ttf|eot|pdf))$",
      "dest": "/public/$1"
    },
    {
      "src": "^/(.*)$",
      "dest": "/api/index.js"
    }
  ]
}