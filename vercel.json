{
  "version": 2,
  "buildCommand": "npm install",
  "installCommand": "npm install",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/public/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/:path((?!.*\\.).*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/public/:path*",
      "destination": "/public/:path*"
    },
    {
      "source": "/config/:path*",
      "destination": "/public/config/:path*"
    },
    {
      "source": "/data/:path*",
      "destination": "/public/data/:path*"
    },
    {
      "source": "/image/:path*",
      "destination": "/public/image/:path*"
    },
    {
      "source": "/files/:path*",
      "destination": "/public/files/:path*"
    },
    {
      "source": "/:path((?!api).*\\.(js|css|png|jpg|jpeg|gif|svg|ico|webp|woff|woff2|ttf|eot|json|xml|txt|pdf)$)",
      "destination": "/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ]
}
