{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm install && node scripts/generate-manifest.js",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "routes": [
    {
      "src": "/resume/(.*)",
      "dest": "/public/resume/$1"
    },
    {
      "src": "/image/(.*)",
      "dest": "/public/image/$1"
    },
    {
      "src": "/files/(.*)",
      "dest": "/public/files/$1"
    },
    {
      "src": "/config/(.*)",
      "dest": "/public/config/$1"
    },
    {
      "src": "/collections/(.*)",
      "dest": "/public/collections/$1"
    },
    {
      "src": "/data/(.*)",
      "dest": "/public/data/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ]
}